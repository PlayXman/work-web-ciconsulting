<div class="block wrapper">
	<div class="container">
		<h2 class="text__align--center">Přihlášení</h2>

		<div class="row justify-content-center">
			<!--Form-->
			<form action="?" method="post" class="col-12 col-md-8 col-lg-6">
				<div class="row">
					<div class="col-12 col-sm-6">
						<label class="form__headding" for="form-name">Jméno</label>
						<input id="form-name" type="text" name="name">
					</div>
					<div class="col-12 col-sm-6">
						<label class="form__headding" for="form-pass">Heslo</label>
						<input id="form-pass" type="password" name="pass">
					</div>

					<div class="col-12">
						<label class="form__headding" for="form-textarea">textarea</label>
						<textarea id="form-textarea" rows="4" cols="16">This is a textarea.</textarea>
					</div>

					<div class="col-12 col-sm-4">
						<label class="form__headding" for="form-checkbox">checkbox</label>
						<div class="form__inLine"><input id="form-checkbox1" type="checkbox" name="checkbox">
							<label for="form-checkbox1">Ano</label>
							<input id="form-checkbox2" type="checkbox" name="checkbox">
							<label for="form-checkbox2">Ne</label>
						</div>
					</div>
					<div class="col-12 col-sm-4">
						<label class="form__headding" for="form-date">date</label>
						<input id="form-date" type="date" name="date">
					</div>
					<div class="col-12 col-sm-4">
						<label class="form__headding" for="form-radio">radio</label>
						<div class="form__inLine"><input id="form-radio1" type="radio" name="radio">
							<label for="form-radio1">Ano</label>
							<input id="form-radio2" type="radio" name="radio">
							<label for="form-radio2">Ne</label>
						</div>
					</div>

					<div class="col-12 col-sm-6">
						<label class="form__headding" for="form-email">email</label>
						<input id="form-email" type="email" name="email">
					</div>
					<div class="col-12 col-sm-6">
						<label class="form__headding" for="form-tel">tel</label>
						<input id="form-tel" type="tel" name="tel">
					</div>

					<div class="col-12">
						<label class="form__headding" for="form-file">file</label>
						<input id="form-file" type="file" name="file">
					</div>

					<div class="col-12 col-sm-6">
						<label class="form__headding" for="form-number">number</label>
						<input id="form-number" type="number" name="number">
					</div>
					<div class="col-12 col-sm-6">
						<label class="form__headding" for="form-range">range</label>
						<input id="form-range" type="range" name="range">
					</div>

					<div class="col-12">
						<script src="https://www.google.com/recaptcha/api.js" async defer></script><!--POZOR! Jen ukazka-->
						<div class="g-recaptcha" data-sitekey="6Le-wvkSAAAAAPBMRTvw0Q4Muexq9bi0DJwx_mJ-"></div>
					</div>

					<div class="col-12 text__align--center">
						<button class="btn btn__color--green">Přidat</button>
						<input class="btn" type="button" value="Odebrat">
					</div>

					<div class="col-12 text__align--center">
						<input class="btn btn__color--grey" type="reset" value="Reset"><input class="btn btn__color--blue" type="submit" value="Přihlásit">
					</div>
				</div>
			</form>
			<!--! Form-->
		</div>
	</div>
</div>